<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:text="My Nanodegree Apps!"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="28sp"
        android:fontFamily="sans-serif-light"
        android:layout_gravity="center"
        android:layout_marginBottom="30dp"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Spotify Streamer"
        android:layout_gravity="center"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:padding="24dp"
        style="@style/AppTheme"
        android:textAllCaps="true"
        android:onClick="spotSteam"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Scores App"
        android:layout_gravity="center"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:padding="24dp"
        android:textAllCaps="true"
        style="@style/AppTheme"
        android:onClick="scoreApp"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Library App"
        android:layout_gravity="center"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:padding="24dp"
        android:textAllCaps="true"
        style="@style/AppTheme"
        android:onClick="libApp"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=" Build It Bigger"
        android:layout_gravity="center"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:padding="24dp"
        android:textAllCaps="true"
        style="@style/AppTheme"
        android:onClick="buildBig"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=" XYZ Reader"
        android:layout_gravity="center"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:padding="24dp"
        android:layout_marginBottom="7dp"
        android:textAllCaps="true"
        style="@style/AppTheme"
        android:onClick="xyzRead"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=" Capstone"
        android:layout_gravity="center"
        android:layout_marginLeft="28dp"
        android:layout_marginRight="28dp"
        android:padding="20dp"
        android:background="#f44336"
        android:onClick="capApp"/>


</LinearLayout>





